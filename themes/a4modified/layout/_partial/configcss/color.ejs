<% if(theme.color.enable) { %>
    <style>
        :root {
            --waline-theme-color: <%=theme.color.font %>; 
            --waline-color: <%=theme.color.font %>; 
            --waline-border-color: <%=theme.color.font %>; 
            --waline-white: <%=theme.color.font %>; 
            --waline-bgcolor-light: <%=theme.color.postBackGround %>;  
        }
        body {
            color: <%=theme.color.font %>;
            background: <%=theme.color.background %>;
        }
        .post-md code {
            background: <%=theme.color.codeBackGround %>;
            color: <%=theme.color.codeFont %>; 
        }
        .post-md pre, .post-md .highlight {
            background: <%=theme.color.codeBackGround %>;
            color: <%=theme.color.codeFont %>; 
        }
        pre .string, pre .value, pre .inheritance, pre .header, pre .ruby .symbol, pre .xml .cdata {
            color: <%=theme.color.font %>;
        }
        pre .number, pre .preprocessor, pre .built_in, pre .literal, pre .params, pre .constant {
            color: <%=theme.color.font %>;
        }
        .year-font-color {
            color: <%=theme.color.font %> !important;
        }
        .wl-card span.wl-nick {
            color: <%=theme.color.font %>; 
        }
        .wl-card .wl-badge {
            border: 1px solid <%=theme.color.font %>;
            color: <%=theme.color.font %>; 
        }
        .wl-btn {
            border: 1px solid <%=theme.color.font %>; 
            color:  <%=theme.color.font %>;  
        }
        .wl-btn.primary {
            color: <%=theme.color.postBackGround %>; 
        }
        .wl-header label {
            color: <%=theme.color.font %>;
        }
        a {
            color: <%=theme.color.linkBeforeClick %>;
        }

        .post-md a {
            color: <%=theme.color.linkBeforeClick %>;
        }

        .nav li a {
            color: <%=theme.color.linkBeforeClick %>;
        }

        .archive-main a:link {
            color: <%=theme.color.linkBeforeClick %>;
        }
        .archive-main a:visited {
            color: <%=theme.color.linkAfterClick %>; 
        }

        .archive li span {
            color: <%=theme.color.font %>;
        }

        .post-main-title {
            color: <%=theme.color.font %>;
        }

        .post-md h1,
        .post-md h2,
        .post-md h3,
        .post-md h4,
        .post-md h5,
        .post-md h6 {
            color: <%=theme.color.font %>;
        }

        [data-waline] p {
            color: <%=theme.color.font %>;
        }
        [data-waline] a {
            color: <%=theme.color.font %>;
        } 
        .wl-sort li.active {
            color: <%=theme.color.font %>;
        }

        .wl-card .wl-meta>span {
            background: <%=theme.color.postBackGround %>;
        }

        .paper {
            background: <%=theme.color.background %>;
        }

        .index-main {
            background: <%=theme.color.indexBackGround %>;
        }

        .paper-main {
            background: <%=theme.color.postBackGround %>;
        }

        .wl-panel {
            background: <%=theme.color.postBackGround %>;
        }

        .archive li:nth-child(odd) {
            background: <%=theme.color.postBackGround %>;
            ;
        }

        .archive li:nth-child(even) {
            background: <%=theme.color.postBackGround %>;
        }

        .post-md table tr:nth-child(odd) td {
            background: <%=theme.color.postBackGround %>;
        }

        .post-md table tr:nth-child(even) td {
            background: <%=theme.color.postBackGround %>;
        }

    
        .progress-wrap::after {
            color: <%=theme.color.font %>; /* 箭头的颜色 */
        }
        .progress-wrap svg.progress-circle path {
	        stroke: <%=theme.color.font %>; /* 边框的颜色 */
        }
        .progress-wrap::before {
	        background-image: linear-gradient(298deg, <%=theme.color.linkBeforeClick %>, <%=theme.color.linkBeforeClick %>); /* 鼠标滑过的箭头颜色 */
         }

        .return-to-last-progress-wrap::after {
            color: <%=theme.color.font %>; /* 箭头的颜色 */
        }
        .return-to-last-progress-wrap svg.progress-circle path {
	        stroke: <%=theme.color.font %>; /* 边框的颜色 */
        }
        .return-to-last-progress-wrap::before {
	        background-image: linear-gradient(298deg, <%=theme.color.linkBeforeClick %>, <%=theme.color.linkBeforeClick %>); /* 鼠标滑过的箭头颜色 */
         }

         .left-toc-container::-webkit-scrollbar-thumb {
            background-color: <%=theme.color.font %>; /* 设置滚动条拖动块的颜色 */
        }

        .bs-docs-sidebar .nav>.active>a,
        .bs-docs-sidebar .nav>li>a:hover,
        .bs-docs-sidebar .nav>li>a:focus {
            color: <%=theme.color.linkBeforeClick %>;
            border-left-color: <%=theme.color.linkBeforeClick %>;
        }
        .bs-docs-sidebar .nav>li>a {
            color:  <%=theme.color.font %>;
        }
    </style>
<% } %>